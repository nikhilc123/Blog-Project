<h3 class="text-center">Adding New Article</h3>
<div class="row">
  <div class="col-mid-12">
    <%= form_for(@article, :html => {class: "form-horizontol", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-mid-1">
        <%= f.label :title %>
      </div>
      <div class="col-mid-11">
        <%= f.text_field :title, class: 'form-control', placeholder: "Title of Article", autofocus: true %>
      </div>
      <br/>
      <div class="form-group">
        <div class="control-label col-mid-1">
          <%= f.label :body %>
        </div>
        <div class="col-mid-11">
          <%= f.text_area :body, rows: 10, class: 'form-control', placeholder: "Body of Article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-mid-offset-1 col-md-11">
          <%= f.submit class: 'btn btn-primary btn-lg pull-right', id: 'submit' %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>